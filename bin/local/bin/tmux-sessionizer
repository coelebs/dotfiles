#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=$(find ~/projects/ -maxdepth 3  -not -path '*/.*'  -type d -execdir test -e {}/.git \; -print | fzf)
fi

if [[ -z $selected ]]; then
    exit 0
fi

worktreename=$(basename $(dirname "$selected"))
selected_name="${worktreename:0:2}/$(basename "$selected" | tr . _)"
echo ${selected_name}; exit 1
tmux_running=$(pgrep tmux)

if [ ! $tmux_running ]; then
    tmux new-session -s $selected_name -c $selected
    return 0
fi

# If there is at least a tmux server running
# And if you're not inside tmux, then either attach to the session or create it:
if [ -z "$TMUX" ]; then
    tmux new-session -A -s $selected_name -c $selected
    return 0
fi

if ! tmux has-session -t $selected_name 2> /dev/null; then
    tmux new-session -ds $selected_name -c $selected
fi

tmux switch-client -t $selected_name

