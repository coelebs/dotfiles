#to unpack files
extract () {
		if [ -f $1 ] ; then
			case $1 in
             *.tar.bz2)   tar xjf $1        ;;
             *.tar.gz)    tar xzf $1     ;;
             *.bz2)       bunzip2 $1       ;;
             *.rar)       unrar e $1     ;;
             *.gz)        gunzip $1     ;;
             *.tar)       tar xf $1        ;;
             *.tbz2)      tar xjf $1      ;;
             *.tgz)       tar xzf $1       ;;
             *.zip)       unzip $1     ;;
             *.Z)         uncompress $1  ;;
             *.7z)        7z x $1    ;;
             *)           echo "'$1' cannot be extracted via extract()" ;;
         esac
     else
         echo "'$1' is not a valid file"
     fi
}

##Go up a specified amount of levels
function .. (){
  local arg=${1:-1};
  while [ $arg -gt 0 ]; do
    cd .. >&/dev/null;
    arg=$(($arg - 1));
  done
}

function geturl() {
  FULLPATH="$1"
  IP=$(hostname -I | cut -d " " -f 1)

  case $FULLPATH in
    "/srv/ftp/"*)
        RELPATH=${FULLPATH/\/srv\/ftp}
        echo "ftp://$IP$RELPATH"
        echo "http://$IP$RELPATH"
        echo "ftp://$IP$RELPATH" | xclip
        ;;
    *)
        cp $FULLPATH /srv/ftp/auto/
        geturl /srv/ftp/auto/$(basename $FULLPATH)
        ;;
  esac
}

function dtb2dts() {
  local dtb=$1
  local dts=$2

  dtc -I dtb -O dts -o "${dts}" "${dtb}"
}

